[user]
	name = Marques Johansson
	email = marques@packet.com
	signingkey = CF2B41F9641BC514131F053427717999E2D09AB6
	# signingkey = DB884A92
[color]
	ui = auto
[push]
	default = simple
[branch]
	autosetuprebase = always
[rerere]
	autoUpdate = true
	enabled = true
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[gpg]
	program = gpg
[tag]
	gpgsign = true
[commit]
	gpgSign = on
[format]
	signOff = on
[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
